generator client {
  provider   = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  PARTICIPANT
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CANCELED
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  REFUSED
  CANCELED
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  role         UserRole
  firstName    String
  lastName     String
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  reservations Reservation[]

  @@map("users")
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  location    String
  capacity    Int
  status      EventStatus
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  reservations Reservation[]

  @@map("events")
}

model Reservation {
  id        String           @id @default(uuid())
  status    ReservationStatus
  userId    String
  eventId   String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  user      User             @relation(fields: [userId], references: [id])
  event     Event            @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
  @@map("reservations")
}

